auto {{ item.device }}
{% if item.bootproto == 'static' %}
iface {{ item.device }} inet static
{% if item.address is defined %}
address {{ item.address }}
{% endif %}
{% if item.netmask is defined %}
netmask {{ item.netmask }}
{% endif %}
{% if item.gateway is defined %}
gateway {{ item.gateway }}
{% endif %}
bridge_ports{% for iface in network_ether_interfaces if iface.bridge|default(None) == item.device %}{{ ' ' ~ iface.device }}{% else %}none{% endfor %}

{% if item.stp is defined %}
bridge_stp {{ item.stp }}
{% endif %}
{% endif %}

{% if item.bootproto == 'dhcp' %}
iface {{ item.device }}  inet dhcp
bridge_ports{% for iface in network_ether_interfaces if iface.bridge|default(None) == item.device %}{{ ' ' ~ iface.device }}{% else %}none{% endfor %}

{% if item.stp is defined %}
bridge_stp {{ item.stp }}
{% endif %}
{% endif %}

{% if item.route is defined %}
{% for i in item.route %}
up route add -net {{ i.network }} netmask {{ i.netmask }} gw {{ i.gateway }} dev {{ item.device }}
{% endfor %}
{% endif %}
